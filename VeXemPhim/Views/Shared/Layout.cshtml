@using VeXemPhim.Models
@using VeXemPhim.Controllers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/layout.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container-header" id="header-scroll">
            <div class="menu">
                <img src="../img/—Pngtree—cinema creative_848148.png" alt="">
                <ul class="tab-menu">
                    <a href=@Url.Action("Trangchu","Trangchu")><li class="btn1 color-yellow">Trang chủ</li></a>
                    <a href=@Url.Action("Lichchieu","Lichchieu")><li class="btn1 color-yellow">Lịch chiếu</li></a>
                    <a href=@Url.Action("Phim","Phim")><li class="btn1 color-yellow">Phim</li></a>
                    <a href=@Url.Action("Food","Food")><li class="btn1 color-yellow">Đồ ăn</li></a>
                    <a href=@Url.Action("Khuyenmai","Khuyenmai")><li class="btn1 color-yellow">Khuyễn mãi</li></a>
                    <a href=@Url.Action("Contact","Contact")><li class="btn1 color-yellow">Liên hệ</li></a>
                </ul>

                <div>
                    @if (Session["Taikhoan"] != null && Session["Taikhoan"] != "")
                    {
                        { KhachHang kh = (KhachHang)Session["Taikhoan"];
                            <p>Chào @kh.ten</p>
                        }
                        
                        <a href=@Url.Action("Dangxuat", "Login")>
                            <div class="btn-DangXuat" id="id-btnDangXuat">
                                <button>Đăng xuất</button>
                            </div>
                        </a>
                    }
                    else
                    {
                        <ul class="tablogin">
                            <a href=@Url.Action("Login", "Login")>
                                <li class="btn-DangNhap" id="id-btnDangNhap">
                                    <button>Đăng nhập</button>
                                </li>
                            </a>
                            <a href=@Url.Action("Register", "Register")>
                                <li class="btn-Dangki" id="btnDangki">
                                    <button>Đăng Ký</button>
                                </li>
                            </a>
                        </ul>


                    }

                </div>
                

                @*<div class="avatar">
                    <i class="far fa-user"></i>
                </div>*@
                <div class="btn-search">
                    <i class="fas fa-search"></i>
                </div>
            </div>

        </div>

    </header>
    <section>
        @RenderBody()
    </section>
    <footer>
        <div class="taskbar-footer">
            <a href="#" class="txt-footer">Chính sách</a>
            <span class="txt-footer">|</span>
            <a href="#" class="txt-footer">Lịch chiếu</a>
            <span class="txt-footer">|</span>
            <a href="#" class="txt-footer">Giá vé</a>
            <span class="txt-footer">|</span>
            <a href="#" class="txt-footer">Liên hệ</a>
            <a href="#header"><i class="fas fa-arrow-up"></i></a>

        </div>
        <div class="DoiTacLienKet">
            <a href="#"><img src="../img/appstore.png" alt="" class="appStore"></a>
            <a href="#"><img src="../img/googlePlay.jpg" alt="" class="googlePlay"></a>

        </div>
        <div class="info-footer">
            <p class="txt-info">Cơ quan chủ quản: BỘ VĂN HÓA, THỂ THAO VÀ DU LỊCH</p>
            <p class="txt-info">Bản quyền thuộc Trung tâm Chiếu phim Quốc gia.</p>
            <p class="txt-info">Giấy phép số: 224/GP- TTĐT ngày 31/8/2010 - Chịu trách nhiệm: Nguyễn Danh Dương – Giám đốc.</p>
            <p class="txt-info">Địa chỉ: 87 Láng Hạ, Quận Ba Đình, Tp. Hà Nội - Điện thoại: 024.35141791</p>
        </div>
        <div class="icon-footer">
            <div class="border-icon-footer">
                <i class="fas fa-envelope"></i>
            </div>
            <div class="border-icon-footer">
                <i class="fab fa-facebook-f"></i>
            </div>
            <div class="border-icon-footer">
                <i class="fab fa-google-plus-g"></i>
            </div>

        </div>
    </footer>
    <script src="../js/layout.js" type="text/javascript"></script>
    <script>

    </script>
</body>
</html>
